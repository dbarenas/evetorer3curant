                # _5_._2_._3_ _R_e_d_u_c_e_d_ _i_n_e_q_u_a_l_i_t_y
          o _5_._3_ _R_e_d_u_c_e_d_ _e_c_o_n_o_m_i_c_ _w_e_l_f_a_r_e
                # _5_._3_._1_ _C_o_s_t_ _o_f_ _c_o_m_p_l_i_a_n_c_e
                # _5_._3_._2_ _D_e_a_d_w_e_i_g_h_t_ _c_o_s_t_s_ _o_f_ _t_a_x_a_t_i_o_n
                # _5_._3_._3_ _P_e_r_v_e_r_s_e_ _i_n_c_e_n_t_i_v_e_s
                # _5_._3_._4_ _R_e_d_u_c_e_d_ _p_r_o_d_u_c_t_i_o_n
    * _6_ _T_a_x_a_t_i_o_n_ _i_n_ _d_e_v_e_l_o_p_i_n_g_ _c_o_u_n_t_r_i_e_s
